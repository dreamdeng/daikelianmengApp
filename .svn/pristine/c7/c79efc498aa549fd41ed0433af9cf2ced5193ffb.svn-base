<script type="application/javascript">
var vm = new Vue({
    el: '#invite_code',
    data: {
        invite_code: '',
    }
});
  var url = "";
  apiready = function () {
    var token = localStorage.getItem("userToken");
    var deviceId = localStorage.getItem("deviceId");
    api.showProgress({title: "", text: "请稍候", modal: true});
    $.ajax({
      url: server_url("spread"),
      method: "POST",
      dataType: "JSON",
      data: {
        token: token,
        deviceid: deviceId,
      },
      success: function (data) {
        // dd(data)
        if (data.code == 0) {
          $("#poster").data("imgPath", data.data.img);
          vm.invite_code = data.data.invite_code;


          // 预下载图片
          // preDownImg(data.data.img);
          var imgPath =data.data.url;
          var path = localStorage.getItem("posterImgPath");
          console.log(path)
          if (path) {
            $("#poster").attr("src", path);
            shareUrl(path);
            sharePoster(imgPath)
          } else {
            api.imageCache({
              url: data.data.img,
              thumbnail: false
            }, function (ret, err) {
              var url = ret.url;
              $("#poster").attr("src", url);
              localStorage.setItem("posterImgPath", url);

            });
          }
        } else {
          btToast(data.msg, 2000);
        }
        api.hideProgress();
      },
      error: function (data) {
        api.hideProgress();
        btToast("系统繁忙，请稍后再试", 2000);
      }
    })
  }

  // var picName3 = new Date().getTime();
  function shareUrl(contentUrl){
    $("#shareUrl").click(function(){
      var wx = api.require('wx');
      wx.isInstalled(function(ret, err) {
        if (ret.installed) {
          //alert("当前设备已安装微信客户端");
          wx.shareWebpage({
            apiKey : 'wx2bcb6c8899b5b2a2',
            scene : 'session',
            title : "当前链接",
            description : '阅读更多文章请安装APP',
            thumb : '../image/logo.png',
            contentUrl : contentUrl,
          }, function(ret, err) {
            if (ret.status) {
              btToast("分享成功", 2000);
              btToast("分享失败", 2000);
            }
          });
        } else {
          btToast("当前设备未安装微信客户端", 2000);
        }
      });
    })
  }
  function sharePoster(sharePoster){
    $("#sharePoster").click(function(){
      var wx = api.require('wx');
      wx.isInstalled(function(ret, err) {
        if (ret.installed) {
          //alert("当前设备已安装微信客户端");
          wx.shareImage({
            apiKey : 'wx2bcb6c8899b5b2a2',
            scene : 'session',
            title : "当前链接",
            description : '阅读更多文章请安装APP',
            thumb : '../image/logo.png',
            contentUrl : sharePoster,
          }, function(ret, err) {
            if (ret.status) {
              btToast("分享成功", 2000);
              btToast("分享失败", 2000);
            }
          });
        } else {
          btToast("当前设备未安装微信客户端", 2000);
        }
      });
    })
  }


