function clip(value, title, msg) {
  var clipBoard = api.require('clipBoard');
  clipBoard.set({
    value: value
  }, function (ret, err) {
    if (ret) {
      api.confirm({
        title: title,
        msg: msg,
        buttons: ['取消', '确定']
      }, function (ret, err) {
        var index = ret.buttonIndex;
        if (index == 2) {
          window.location.href = 'weixin://'
        }
      });
    }
  });
}

